<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<Nullable>enable</Nullable>
		<LangVersion>8.0</LangVersion>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<AssemblyName>Coding4fun.PainlessUtils</AssemblyName>
		<RootNamespace>Coding4fun.PainlessUtils</RootNamespace>
		<Company>Coding4fun</Company>
		<Authors>Korshunov Artem</Authors>
		<Title>Painless Utils</Title>
		<Description>Extension methods for changing case of string</Description>
		<Copyright>Copyright Â©2021 Coding4fun</Copyright>
		<Version>1.0.3</Version>
		
		<PackageId>Coding4fun.PainlessUtils</PackageId>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
		<PackageProjectUrl>https://github.com/scrappyCoco/PainlessUtils</PackageProjectUrl>
		<PackageTags>string case</PackageTags>
		<PackageReleaseNotes>Support for netstandard2.0 has been added.</PackageReleaseNotes>
		<Configuration>Release</Configuration>
	</PropertyGroup>

	<ItemGroup>
	  <PackageReference Include="System.Memory" Version="4.5.4" Condition="'$(TargetFramework)'=='netstandard2.0'" />
	</ItemGroup>

</Project>
